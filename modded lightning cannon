loadstring(game:HttpGet("https://raw.githubusercontent.com/GenesisFE/Genesis/main/Obfuscations/Lightning%20Cannon"))()
-- White → Light Gray Gradient Highlight
-- LocalScript

local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- Gradient colors
local WHITE = Color3.fromRGB(255, 255, 255)
local LIGHT_GRAY = Color3.fromRGB(120, 120, 120) -- lighter gray

local TARGET_TRANSPARENCY = 0.4
local FADE_OUT_TIME = 0.25
local GRADIENT_SPEED = 1.5 -- lower = slower blend

local function setupHighlight(highlight)
	if not highlight or not highlight:IsA("Highlight") then return end
	
	highlight.OutlineTransparency = 1
	highlight.FillTransparency = TARGET_TRANSPARENCY
	
	local time = 0
	local connection
	
	-- Smooth white ↔ light gray gradient animation
	connection = RunService.RenderStepped:Connect(function(dt)
		if not highlight.Parent then
			if connection then
				connection:Disconnect()
			end
			return
		end
		
		time += dt * GRADIENT_SPEED
		local alpha = (math.sin(time) + 1) / 2
		highlight.FillColor = WHITE:Lerp(LIGHT_GRAY, alpha)
	end)
	
	-- Fade out before removal
	highlight.AncestryChanged:Connect(function(_, parent)
		if not parent then
			if connection then
				connection:Disconnect()
			end
			
			local tween = TweenService:Create(
				highlight,
				TweenInfo.new(FADE_OUT_TIME, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
				{
					FillTransparency = 1
				}
			)
			tween:Play()
		end
	end)
end

-- Apply to existing highlights
for _, obj in ipairs(game:GetDescendants()) do
	if obj:IsA("Highlight") then
		setupHighlight(obj)
	end
end

-- Apply to new highlights
game.DescendantAdded:Connect(function(obj)
	if obj:IsA("Highlight") then
		setupHighlight(obj)
	end
end)
